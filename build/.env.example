# ============================================
# ARCHIVO DE EJEMPLO - NO USAR EN PRODUCCIÓN
# ============================================
# Copiar este archivo como .env y configurar con valores reales
# El archivo .env NO debe subirse a Git

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=nombre_base_datos
DB_USER=usuario_db
DB_PASS=password_seguro_aqui

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================
# Clave secreta para JWT (cambiar en producción)
JWT_SECRET=clave_secreta_jwt_muy_segura_cambiar_en_produccion

# Clave secreta para sesiones (cambiar en producción)
SESSION_SECRET=clave_secreta_sesion_muy_segura_cambiar_en_produccion

# ============================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================
# Entorno: development, staging, production
APP_ENV=production

# Debug mode (true/false)
APP_DEBUG=false

# URL base de la aplicación
APP_URL=https://intranet.clautmetropolitano.mx

# ============================================
# CONFIGURACIÓN DE RATE LIMITING
# ============================================
# Habilitar rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Directorio para almacenar datos de rate limiting
RATE_LIMIT_STORAGE=/tmp/rate_limits

# ============================================
# CONFIGURACIÓN DE SESIONES
# ============================================
# Nombre de la cookie de sesión
SESSION_NAME=CLAUT_SESSION

# Timeout de inactividad en segundos (1800 = 30 minutos)
SESSION_INACTIVITY_TIMEOUT=1800

# Tiempo de vida máximo de sesión en segundos (3600 = 1 hora)
SESSION_LIFETIME=3600

# Intervalo de regeneración de session ID en segundos (1800 = 30 minutos)
SESSION_REGENERATE_INTERVAL=1800

